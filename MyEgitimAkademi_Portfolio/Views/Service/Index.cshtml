@model List<MyEgitimAkademi_Portfolio.Models.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<br />

<h2 style="background-color:burlywood; text-align:center; border-radius:8px; color:ghostwhite">Hizmet Listesi</h2>
<br />
<table class="table table-bordered" style="text-align:center; background-color:beige">
    <tr>
        <th>Hizmet ID</th>
        <th>Hizmet Adı</th>
        <th>Hizmet Sil</th>
        <th>Hizmet Güncelle</th>
    </tr>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.serviceID</td>
            <td>@s.serviceName</td>
            <td><a href="/Service/DeleteService/@s.serviceID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@s.serviceID" class="btn btn-outline-success">Güncelle</a></td>
           
        </tr>

    }

</table>
<br />
<a href="/Service/ServiceAdd/" class="btn btn-outline-secondary">Yeni Hizmet Ekle</a>

