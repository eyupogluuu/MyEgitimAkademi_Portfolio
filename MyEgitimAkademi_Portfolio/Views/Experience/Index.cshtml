@model List<MyEgitimAkademi_Portfolio.Models.Experience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<br />

<h2 style="background-color:burlywood; text-align:center; border-radius:8px; color:ghostwhite">Deneyim Sayfası</h2>
<br />
<table class="table table-bordered" @*style="text-align:center;*@ background-color:beige">
    <tr>
        <th>Deneyim ID</th>
        <th>Deneyim Adı</th>
        <th>Deneyim Süresi</th>
        <th>Yetenek Sil</th>
        <th>Yetenek Güncelle</th>
    </tr>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.experienceID</td>
            <td>@e.experiencetittle</td>
            <td>@e.experienceperiod</td>

            <td>
                @Html.ActionLink("Sil", "DeleteExperience", new { id = e.experienceID }, new
                {
           @class = "btn btn-outline-danger ",
                    onclick = "return confirm('Silmek İstediğinize Emin misiniz?')"
                })
            </td>
            <td><a href="/Experience/UpdateExperience/@e.experienceID/" class="btn btn-outline-success">Güncelle</a></td>

        </tr>

    }
</table>
<br />
<a href="/Experience/AddExperience/" class="btn btn-outline-secondary">Yeni Deneyim Ekle</a>



